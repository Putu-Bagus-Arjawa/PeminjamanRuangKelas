generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  role         String        @default("USER")

  peminjaman   Peminjaman[]  @relation("UserPeminjam")
  persetujuan  Persetujuan[] @relation("UserAdmin")
  notifikasi   Notifikasi[]
}

model Ruangan {
  id              Int           @id @default(autoincrement())
  nama_ruangan    String 
  kapasitas       Int
  fasilitas       String
  lokasi_ruangan  String

  peminjaman      Peminjaman[]
}

model Peminjaman {
  id             Int        @id @default(autoincrement())
  tanggal        DateTime
  jam_mulai      String
  jam_selesai    String
  status         String     @default("PENDING")
  agenda         String
  deskripsi      String?

  id_user        Int
  id_ruangan     Int

  user           User       @relation("UserPeminjam", fields: [id_user], references: [id])
  ruangan        Ruangan    @relation(fields: [id_ruangan], references: [id])
  persetujuan    Persetujuan[]
}

model Persetujuan {
  id               Int        @id @default(autoincrement())
  keputusan        String
  tanggal          DateTime   @default(now())

  id_peminjaman    Int
  id_user          Int

  peminjaman       Peminjaman @relation(fields: [id_peminjaman], references: [id])
  user             User       @relation("UserAdmin", fields: [id_user], references: [id])
}

model Notifikasi {
  id              Int        @id @default(autoincrement())
  pesan           String
  tanggal_kirim   DateTime   @default(now())
  id_user         Int

  user            User       @relation(fields: [id_user], references: [id])
}
